@model LoginDto
@{
}

<div class="row">
    <div class="col-md-4 mx-auto rounded border p-4 form-container">
        <h2 class="text-center mb-3 text-white">Please Log In</h2>
        <hr class="text-white" />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label text-white">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-white">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                <label class="form-check-label text-white">Remember Me</label>
            </div>

            <div class="row mb-3">
                <div class="col d-grid">
                    <button type="submit" class="btn custom-btn">Log in</button>
                </div>
                <div class="col d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>

            <div>
                <a class="btn btn-link text-white" asp-controller="Account" asp-action="ForgotPassword">
                    Forgot your password?
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-image: url('/images/Iphone.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
    }

    .form-container {
        background-color: #007bff; /* Blue background */
        color: white;
        border: 1px solid #0056b3; /* Darker blue border */
    }

        .form-container hr {
            border-color: white; /* White horizontal line */
        }

    .custom-btn {
        background-color: white; /* White background */
        color: #007bff; /* Blue text */
        border: 1px solid #007bff; /* Blue border */
    }

        .custom-btn:hover {
            background-color: #e6e6e6; /* Light gray on hover */
            color: #0056b3; /* Darker blue text */
        }
</style>

